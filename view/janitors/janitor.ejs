          <div class="tab-content">
            <div id="personal-info" class="form-section tab-pane active">
              <h2>Personal Information</h2>
              <form id="profile-form">
                <input type="hidden" name="user_id" id="user-id" />

                <div class="form-row">
                  <div class="form-group half-width">
                    <label>Name</label>
                    <input type="text" name="name" class="form-input" />
                  </div>
                  <div class="form-group half-width">
                    <label>Gender</label>
                    <div class="gender-options">
                      <input type="radio" id="male" name="gender" value="Male" />
                      <label for="male">Male</label>
                      <input type="radio" id="female" name="gender" value="Female" />
                      <label for="female">Female</label>
                    </div>
                  </div>
                </div>

                <div class="form-row">
                  <div class="form-group half-width">
                    <label>Birthdate</label>
                    <input type="date" name="birthdate" class="form-input" />
                  </div>
                  <div class="form-group half-width">
                    <label>Contact Number</label>
                    <input type="text" name="contact" class="form-input" />
                  </div>
                </div>

                <div class="form-group">
                  <label>Address</label>
                  <input type="text" name="address" class="form-input" />
                </div>

                <div class="form-group">
                  <label>Email Address</label>
                  <input type="email" name="email" class="form-input" />
                </div>

                <div class="form-group">
                  <label>Profile Image</label>
                  <div class="profile-preview">
                    <img src="../image/profile2.jpg" alt="Profile Preview" class="preview-img" />
                    <div class="profile-upload-controls">
                      <input type="file" id="profile-image-input" accept="image/*" style="display: none" />
                      <button type="button" class="choose-image-btn" id="choose-image-btn">Choose Image</button>
                      <p class="image-info">Max size: 2MB. Accepted formats: JPG, PNG, GIF</p>
                    </div>
                  </div>
                </div>

                <div class="form-actions">
                  <button type="submit" class="update-btn">Update Profile</button>
                </div>
              </form>
            </div>

