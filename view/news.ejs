<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Bin Map</title>
  <style>
    .box {
      position: relative;
      display: inline-block;
    }

    .img-map {
      width: 100%;
      max-width: 800px;
      display: block;
    }

    #overlay-container {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
    }

    .bin-overlay {
      position: absolute;
      background-color: rgba(0, 123, 255, 0.8);
      color: white;
      font-size: 12px;
      padding: 4px 6px;
      border-radius: 5px;
      transform: translate(-50%, -100%);
      text-align: center;
    }

    .bin-logo {
      width: 24px;
      height: 24px;
      display: block;
      margin: 0 auto 2px;
    }
  </style>
</head>
<body>

<h2>Smart Bin Map</h2>

<div class="box">
  <img src="image/Floor Plan 1.png" alt="Floor Plan" class="img-map" id="floorImage" />
  <div id="overlay-container"></div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io();
  const overlayContainer = document.getElementById('overlay-container');

  socket.on('binUpdate', data => {
    let existing = document.getElementById(data.binId);

    const html = `
      <img src="https://cdn-icons-png.flaticon.com/512/684/684908.png" class="bin-logo" />
      ${data.percentage}%
    `;

    if (!existing) {
      const div = document.createElement('div');
      div.className = 'bin-overlay';
      div.id = data.binId;
      div.style.left = data.x + 'px';
      div.style.top = data.y + 'px';
      div.innerHTML = html;
      overlayContainer.appendChild(div);
    } else {
      existing.style.left = data.x + 'px';
      existing.style.top = data.y + 'px';
      existing.innerHTML = html;
    }
  });
</script>
</body>
</html>


