<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/admin.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <script src="/js/profileupdet.js"></script>
  </head>
  <body>
    <aside>
      <div class="logo2">
        <h3>ECOBIN</h3>
      </div>

      <div class="options">
        <ul>
          <a href="#" class="menu-item active" data-target="dashboard">
            <i class="bx bx-home"></i> <span>Dashboard</span>
          </a>
          <a href="#" class="menu-item" data-target="history">
            <i class="bx bx-history"></i> <span>Activity Logs</span>
          </a>
          <a href="#" class="menu-item" data-target="activity">
            <i class="bx bx-history"></i> <span>History Logs</span>
          </a>
          <a href="#" class="menu-item" data-target="staffs"> <i class="bx bx-group"></i> <span>Staffs</span> </a>
          <a href="#" class="menu-item" data-target="settings"> <i class="bx bx-cog"></i> <span>Settings</span> </a>
        </ul>
      </div>

      <div class="sign-out">
        <a href="/login" id="logoutBtn"><i class="bx bx-log-out"></i> Logout</a>
      </div>
    </aside>

    <main>
      <!-- Dashboard -->
      <div id="dashboard" class="content-panel active">
        <h1>Overview</h1>
        <div class="analytics">
          <div class="toggle-buttons">
            <button class="toggle active" data-period="day">Day</button>
            <button class="toggle" data-period="week">Week</button>
            <button class="toggle" data-period="month">Month</button>
          </div>

          <div class="summary-cards">
            <div class="card">
              <h3>Biodegradable</h3>
              <p class="weight" id="bioWeight">10 kg</p>
              <p id="bioLabel">For the month of January</p>
            </div>
            <div class="card">
              <h3>Non-Biodegradable</h3>
              <p class="weight" id="nonbioWeight">5 kg</p>
              <p id="nonbioLabel">For the month of January</p>
            </div>
            <div class="card">
              <h3>Foodwaste</h3>
              <p class="weight" id="foodWeight">1 kg</p>
              <p id="foodLabel">For the month of January</p>
            </div>
          </div>

          <div class="chart-container">
            <canvas id="wasteChart" style="margin-top: 30px"></canvas>
          </div>
        </div>

        <div class="container-map">
          <div class="map-container">
            <div class="box">
              <div id="floorImageContainer1"></div>
            </div>
          </div>
          <div class="floorstat">
            <select class="floor-dropdown" id="floor1">
              <option value="1">Floor 1</option>
              <option value="2">Floor 2</option>
              <option value="3">Floor 3</option>
              <option value="4">Floor 4</option>
              <option value="4">Floor 5</option>
              <option value="4">Floor 6</option>
            </select>
            <div class="stat">Status</div>
          </div>

                    <div class="bin-status" id="admin-bin-status">            <div class="admin-bin-item" data-bin="bin1">              <p>S1Bin1 <span class="progress yellow" data-progress="0">--</span></p>              <div class="progress-bar-container">                <div class="progress-bar progress-yellow" style="width: 0%"></div>              </div>              <small class="last-update">Connecting...</small>            </div>            <div class="admin-bin-item" data-bin="bin2">              <p>S1Bin2 <span class="progress green" data-progress="0">--</span></p>              <div class="progress-bar-container">                <div class="progress-bar progress-green" style="width: 0%"></div>              </div>              <small class="last-update">Connecting...</small>            </div>            <div class="admin-bin-item" data-bin="bin3">              <p>S1Bin3 <span class="progress red" data-progress="0">--</span></p>              <div class="progress-bar-container">                <div class="progress-bar progress-red" style="width: 0%"></div>              </div>              <small class="last-update">Connecting...</small>            </div>          </div>
        </div>
      </div>

      <!-- Activity Logs -->
      <div id="history" class="content-panel">
        <h3>Activity Log</h3>

        <div class="search-container">
          <div class="filter">
            <input type="date" id="activityDateFilter" class="date-filter" />
          </div>
        </div>

        <div>
          <table class="staff-table">
            <thead>
              <tr>
                <th>Bin ID</th>
                <th>Bins</th>
                <th>Floor</th>
                <th>Staff</th>
                <th>Date</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Status</th>
              </tr>
            </thead>
                        <tbody id="activityTableBody">              <tr>                <td colspan="8" style="text-align: center; padding: 20px; color: #666">Loading activity logs...</td>              </tr>            </tbody>
          </table>
        </div>
      </div>

      <div id="activity" class="content-panel">
        <h3>History Log</h3>
        <div class="search-container">
          <div class="filter"><input type="date" id="historyDateFilter" class="date-filter" /></div>
        </div>

        <div class="historytab">
          <table class="staff-table">
            <thead>
              <tr>
                <th>History ID</th>
                <th>Email</th>
                <th>Role</th>
                <th>Time In</th>
                <th>Time Out</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody id="historyTableBody"></tbody>
          </table>
        </div>
      </div>
      <!-- Staffs -->
      <div id="staffs" class="content-panel">
        <h3>Staff Information</h3>

        <div class="right-head">
          <div class="search -bin-staff">
            <input type="text" id="binSearch" placeholder="Search" class="search-bar2" />
          </div>
        </div>

        <div>
          <table class="table2">
            <thead>
              <tr>
                <th>Staff ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Address</th>
                <th>Contact No.</th>
                <th>Assigned Floor</th>
                <th>Status</th>
                <!-- <th>Action</th> -->
              </tr>
            </thead>
            <tbody id="staffTableBody"></tbody>
          </table>
        </div>
      </div>
      <!-- viewing staffinfo modal -->

      <!-- Settings -->
      <div id="settings" class="content-panel">
        <div class="content">
          <div class="profile-section">
            <img src="../image/profile2.jpg" alt="Profile Image" class="profile-img" />
            <h3>Jerald Aliviano</h3>
            <p>Admin</p>

            <ul class="settings-menu">
              <li class="tab-link active" data-tab="personal-info">Personal Information</li>
              <li class="tab-link" data-tab="notifications">Notifications</li>
              <li class="tab-link" data-tab="change-password">Change Password</li>
            </ul>
          </div>

          <div class="tab-content">
            <div id="personal-info" class="form-section tab-pane active">
              <h2>Personal Information</h2>
              <form id="profile-form">
                <input type="hidden" name="user_id" id="user-id" />

                <div class="form-row">
                  <div class="form-group half-width">
                    <label>Name</label>
                    <input type="text" name="name" />
                  </div>
                  <div class="form-group half-width">
                    <label>Gender</label>
                    <div class="gender-options">
                      <input type="radio" name="gender" value="Male" /> Male
                      <input type="radio" name="gender" value="Female" /> Female
                    </div>
                  </div>
                </div>

                <div class="form-row">
                  <div class="form-group half-width">
                    <label>Birthdate</label>
                    <input type="date" name="birthdate" />
                  </div>
                  <div class="form-group half-width">
                    <label>Contact Number</label>
                    <input type="text" name="contact" />
                  </div>
                </div>

                <div class="form-group">
                  <label>Address</label>
                  <input type="text" name="address" />
                </div>

                <div class="form-group">
                  <label>Email Address</label>
                  <input type="email" name="email" />
                </div>

                <div class="form-group">
                  <label>Profile Image</label>
                  <input type="file" id="profile-image-input" />
                </div>

                <button type="submit" class="update-btn">Update</button>
              </form>
            </div>

            <div id="notifications" class="form-section tab-pane">
              <h2>Notifications</h2>
              <div class="header">
                <button class="mark-read"><img src="/image/icons8-read-30.png" alt="" />Mark all as read</button>
                <div class="tabs">
                  <button class="tab active">View All</button>
                  <button class="tab">Mentions</button>
                  <button class="tab">Request</button>
                </div>
              </div>
              <div class="notifications">
                <div class="notification unread">
                  <img src="/image/profile.jpg" alt="Avatar" />
                  <div class="message">
                    <strong>@angelcanete</strong> floor 1 bin012 is collected!
                    <div class="time">Friday 11:23am</div>
                  </div>
                  <div class="meta">
                    <p>1 hour ago</p>
                    <span class="dot"></span>
                  </div>
                </div>
                <div class="notification unread">
                  <img src="/image/profile3.jpg" alt="Avatar" />
                  <div class="message">
                    <strong>@anubajai</strong> floor 1 bin013 is collected!
                    <div class="time">Friday 08:23am</div>
                  </div>
                  <div class="meta">
                    <p>4 hours ago</p>
                    <span class="dot"></span>
                  </div>
                </div>
                <div class="notification">
                  <img src="/image/profile2.jpg" alt="Avatar" />
                  <div class="message">
                    <strong>@jeralynperitos</strong> request for new janitors approval
                    <div class="ti me">Tuesday 11:00am</div>
                  </div>
                  <div class="meta">4 days ago</div>
                </div>
                <div class="notification">
                  <img src="/image/profile.jpg" alt="Avatar" />
                  <div class="message">
                    <strong>@angelcanete</strong> floor 1 bin011 is collected!
                    <div class="time">Tuesday 03:00pm</div>
                  </div>
                  <div class="meta">4 days ago</div>
                </div>
                <div class="notification">
                  <img src="/image/profile2.jpg" alt="Avatar" />
                  <div class="message">
                    <strong>@jeralynperitos</strong> floor 4 bin041 is collected!
                    <div class="time">Tuesday 11:00am</div>
                  </div>
                  <div class="meta">4 days ago</div>
                </div>
                <div class="notification">
                  <img src="/image/profile2.jpg" alt="Avatar" />
                  <div class="message">
                    <strong>@jeralynperitos</strong> floor 4 bin041 is collected!
                    <div class="time">Tuesday 11:00am</div>
                  </div>
                  <div class="meta">4 days ago</div>
                </div>
              </div>
            </div>

            <div id="change-password" class="form-section tab-pane">
              <h2>Change Password</h2>
              <form id="change-password-form">
                <div class="form-group password-group">
                  <label>Current Password</label>
                  <div class="password-wrapper">
                    <input type="password" id="current-password" />
                    <span class="toggle-password" onclick="togglePassword('current-password', this)">
                      <img src="/image/icons8-eye-24.png" alt="Toggle" />
                    </span>
                  </div>
                </div>

                <div class="form-group password-group">
                  <label>New Password</label>
                  <div class="password-wrapper">
                    <input type="password" id="new-password" />
                    <span class="toggle-password" onclick="togglePassword('new-password', this)">
                      <img src="/image/icons8-eye-24.png" alt="Toggle" />
                    </span>
                  </div>
                </div>

                <div class="form-group password-group">
                  <label>Confirm New Password</label>
                  <div class="password-wrapper">
                    <input type="password" id="confirm-password" />
                    <span class="toggle-password" onclick="togglePassword('confirm-password', this)">
                      <img src="/image/icons8-eye-24.png" alt="Toggle" />
                    </span>
                  </div>
                </div>

                <button class="update-btn1" type="submit">Save Changes</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>

        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>    <script src="/js/admin.js"></script>    <script src="/js/tabstaff.js"></script>    <script src="/js/chart.js"></script>    <script src="/js/logout.js"></script>    <script src="/js/admin-logs.js"></script>    <script src="/js/allStafff.js"></script>    <script src="/js/setting.js"></script>    <script src="/js/changepass.js"></script>    <script src="/js/floorque1.js"></script>    <script src="/js/floorbins2.js"></script>    <script src="/js/charttab.js"></script>    <script src="/js/search.js"></script>    <script src="/js/admin-realtime-bins.js"></script>
  </body>
</html>
