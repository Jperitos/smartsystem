              <h2>Personal Information</h2>
              <form id="profile-form">
                <input type="hidden" name="user_id" id="user-id" />

                <div class="form-row">
                  <div class="form-group half-width">
                    <label>Name</label>
                    <input type="text" name="name" required />
                  </div>
                  <div class="form-group half-width">
                    <label>Gender</label>
                    <div class="gender-options">
                      <label> <input type="radio" name="gender" value="Male" required /> Male </label>
                      <label> <input type="radio" name="gender" value="Female" required /> Female </label>
                    </div>
                  </div>
                </div>

                <div class="form-row">
                  <div class="form-group half-width">
                    <label>Birthdate</label>
                    <input type="date" name="birthdate" required />
                  </div>
                  <div class="form-group half-width">
                    <label>Contact Number</label>
                    <input type="text" name="contact" required />
                  </div>
                </div>

                <div class="form-group">
                  <label>Address</label>
                  <input type="text" name="address" required />
                </div>

                <div class="form-group">
                  <label>Email Address</label>
                  <input type="email" name="email" required />
                </div>

                <div class="form-group">
                  <label>Profile Image</label>
                  <div class="profile-image-container">
                    <div class="image-preview-wrapper">
                      <img
                        id="image-preview"
                        src="<%= typeof user !== 'undefined' && user.profile_image ? user.profile_image : '/image/profile2.jpg' %>"
                        alt="Profile preview"
                        style="max-width: 100px; max-height: 100px; margin-bottom: 10px; border-radius: 50%"
                      />
                    </div>
                    <div class="button-group">
                      <div class="upload-btn-wrapper">
                        <input type="file" id="profile-image-input" accept="image/*" class="file-input" />
                        <label for="profile-image-input" class="file-input-label" style="height: 40px"
                          >Choose Image</label
                        >
                      </div>
                      <button type="submit" class="update-btn" style="height: 40px">Update Profile</button>
                    </div>
                    <small class="file-info">Max size: 2MB. Accepted formats: JPG, PNG, GIF</small>
                  </div>
                </div>
              </form>
            </div>

