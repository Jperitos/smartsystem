    <style>
      .bin-info-card {
        cursor: pointer;
        transition: all 0.2s ease;
      }

      .bin-info-card:hover {
        background-color: #f5f5f5;
        transform: translateY(-3px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      /* Save button styles */
      .save-btn1 {
        cursor: pointer;
        padding: 10px 20px;
        background-color: #4caf50;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        transition: all 0.3s ease;
        margin-top: 15px;
      }

      .save-btn1:hover {
        background-color: #45a049;
      }

      .save-btn1:disabled {
        background-color: #cccccc;
        cursor: not-allowed;
        opacity: 0.7;
      }

      /* Modal styling */
      .modal2 {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
      }

      .modal-content2 {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        width: 500px;
        max-width: 90%;
        max-height: 90vh;
        overflow-y: auto;
        position: relative;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
      }

      .close {
        position: absolute;
        right: 15px;
        top: 10px;
        font-size: 24px;
        cursor: pointer;
      }

      #modal-title {
        margin-top: 0;
        padding-bottom: 10px;
        border-bottom: 1px solid #eee;
      }

      .clock-display {
        display: inline-block;
        padding: 8px;
        background-color: #f5f5f5;
        border-radius: 4px;
        font-size: 16px;
        color: #333;
        margin-top: 5px;
      }

      /* Profile image upload styling */
      .profile-image-container {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
      }

      .image-preview-wrapper {
        margin-bottom: 15px;
        position: relative;
      }

      #image-preview {
        border: 2px solid #ddd;
        object-fit: cover;
        transition: all 0.3s ease;
      }

      #image-preview.preview-active {
        border-color: #4caf50;
      }

      .file-input {
        opacity: 0;
        width: 0.1px;
        height: 0.1px;
        position: absolute;
      }

      /* Button alignment fixes */
      .button-group {
        display: flex;
        gap: 10px;
        align-items: stretch;
        margin-bottom: 10px;
        height: 40px;
      }

      .upload-btn-wrapper {
        height: 40px;
      }

      .file-input-label,
      .update-btn {
        height: 100%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0 15px;
        border-radius: 4px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 14px;
        text-align: center;
        border: none;
        margin: 0;
        box-sizing: border-box;
      }

      .file-input-label {
        background-color: #4caf50;
        color: white;
      }

      .file-input-label:hover {
        background-color: #45a049;
      }

      .update-btn {
        background-color: #2196f3;
        color: white;
      }

      .update-btn:hover {
        background-color: #0b7dda;
      }

      .file-info {
        display: block;
        margin-top: 5px;
        color: #666;
        font-style: italic;
      }

      /* Notification styling */
      #notification-container {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 9999;
        max-width: 350px;
      }

      /* Form validation styling */
      input:required:invalid,
      input:focus:invalid {
        border-color: #ff6b6b;
      }

      input:required:valid {
        border-color: initial; /* Reset to default border color */
      }

      /* Error message for form validation */
      .error-message {
        color: #ff6b6b;
        font-size: 12px;
        margin-top: 5px;
        display: none;
      }

      input:required:invalid + .error-message {
        display: block;
      }
