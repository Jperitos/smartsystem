        <!-- Update Staff Modal -->
        <div id="updateStaffModal" class="modal">
          <div class="modal-content">
            <h2>Update Staff Information</h2>
            <form id="updateStaffForm">
              <div class="row">
                <div class="input">
                  <label>Name</label><br />
                  <input type="text" id="updateName" required placeholder="Name" />
                </div>

                <div class="input">
                  <label>Gender</label><br />
                  <input type="radio" name="updateGender" value="Male" /> Male
                  <input type="radio" name="updateGender" value="Female" /> Female
                </div>
              </div>

              <div class="row">
                <div class="input">
                  <label>Age</label><br />
                  <input type="text" id="updateAge" required placeholder="Enter age" />
                </div>
                <div class="input">
                  <label>Contact Number</label><br />
                  <input type="text" id="updateContact" required placeholder="Add contact number" />
                </div>
              </div>

              <div class="input">
                <label>Address</label><br />
                <input type="text" id="updateAddress" required class="address" placeholder="Enter Address" /><br />
              </div>

              <div class="input">
                <label>Email Address</label><br />
                <input type="email" id="updateEmail" required class="email" placeholder="Enter Email Address" />
              </div>

              <div class="row">
                <div class="input">
                  <label>Assign Floor</label><br />
                  <input type="number" id="updateFloor" required placeholder="Floor" />
                </div>

                <div class="input">
                  <label>Marital Status</label><br />
                  <select id="updateMaritalStatus">
                    <option>Single</option>
                    <option>Married</option>
                    <option>Separated</option>
                  </select>
                </div>
              </div>

              <div class="modal-buttons">
                <button type="submit" class="save-btn">Update</button>
                <button type="button" id="closeUpdateModalBtn" class="cancel-btn">Cancel</button>
              </div>
            </form>
